<div class="modal fade" id="editDialog" tabindex="-1" role="dialog" aria-labelledby="modalEdit">
    <div class="modal-dialog" role="document">
        <div id="editModalContent" class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalEditH4"></h4>
            </div>
            @using (Html.BeginForm("", "", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    
                    @if (@ViewBag.currentPage == "genres")
                {
                        @: @Html.Hidden("GenreId")
                        <p id="editModalP"></p>

                        @: @Html.Editor("GenreName", new { htmlAttributes = new { @class = "form-control required" } })
                        @: @Html.ValidationMessage("GenreName", "", new { @class = "text-danger" })
                }
                    @if (@ViewBag.currentPage == "languages")
                {
                        @: @Html.Hidden("LanguageId")
                        <p id="editModalP"></p>

                        @: @Html.Editor("LanguageName", new { htmlAttributes = new { @class = "form-control required" } })
                        @: @Html.ValidationMessage("LanguageName", "", new { @class = "text-danger" })
                }
                    @if (@ViewBag.currentPage == "nationalities")
                {
                        @: @Html.Hidden("NationalityId")
                        <p id="editModalP"></p>

                        @: @Html.Editor("NationalityName", new { htmlAttributes = new { @class = "form-control required" } })
                        @: @Html.ValidationMessage("NationalityName", "", new { @class = "text-danger" })
                }

                </div>

                <div class="modal-footer">
                    <button id="editSubmitButton" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }

        </div>
    </div>
</div>